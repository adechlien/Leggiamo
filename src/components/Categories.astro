---
const categories = [
  { name: "Lágrimas de Siddartha", slug: "lagrimas" },
  { name: "Still Prefer Sentir", slug: "still" },
  { name: "Placebo Onírico", slug: "placebo" },
  { name: "En las luces de colores", slug: "colores" },
];
---

<div class="w-full flex flex-col gap-4 sm:w-[500px] sm:mx-auto">
  <h2 class="bg-black/25 backdrop-blur-md border border-white/20 rounded-xl text-2xl font-bold text-left px-2 py-1 pb-0 font-bebas">Colecciones</h2>
  <div class="grid grid-cols-2 w-full gap-4 px-3">
    {
      categories.map((category) => (

  <a href={`/${category.slug}`} class="block">
    <article class="overflow-hidden flex flex-col gap-1">
      <img src={`/${category.slug}.svg`} alt="{title}" class="" />
      <h3 class="font-bebas text-lg text-center">{category.name}</h3>
    </article>
  </a>
      ))
    }
  </div>
</div>
