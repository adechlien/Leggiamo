---
const categories = [
  { name: "Lágrimas de Siddartha", slug: "lagrimas" },
  { name: "Still Prefer Sentir", slug: "still" },
  { name: "Placebo Onírico", slug: "placebo" },
  { name: "En las luces de colores", slug: "colores" },
];
---

<div class="w-full flex flex-col gap-4 sm:w-[480px] sm:mx-auto">
  <h2 class="text-5xl font-bold text-left font-staatliches">Colecciones</h2>
  <div class="flex flex-col w-full gap-4">
    {
      categories.map((category) => (
        <a href={`/${category.slug}`} class="w-fit">
            <article class="overflow-hidden flex flex-row items-center">
                <!-- <img src={`/${catext-[#202020]tegory.slug}.svg`} alt="{title}" class="max-h-12 m-2" /> -->
                <h3 class="font-staatliches font-bold text-xl text-center text-[#505050] pr-2">{category.name}</h3>
            </article>
        </a>
      ))
    }
  </div>
</div>
