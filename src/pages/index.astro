---
import Layout from "../layouts/Layout.astro";
import Recent from "../components/Recent.astro";
import Categories from "../components/Categories.astro";
import Anios from "../components/Anios.astro";
import Destacados from "../components/Destacados.astro";
import Footer from "../components/Footer.astro";

const heroBg = "/banner.svg";
const avatar = "/avatar.jpg";
const baseBg = "#024350";
---

<Layout title="Inicio">
  <main class="w-full max-w-[1100px] sm:max-w-none" style={`background-color:${baseBg};`}>
    <!-- HERO -->
    <section class="relative overflow-hidden">
        <div class="relative w-full min-h-[70vh] bg-cover bg-bottom" style={`background-image: url(${heroBg});`}>
        <div
          class="sm:hidden pointer-events-none absolute inset-x-0 top-0 h-4"
          style={`background: linear-gradient(to top, rgba(0,0,0,0), ${baseBg});`}
        ></div>
        <div
          class="pointer-events-none absolute inset-x-0 bottom-0 h-4"
          style={`background: linear-gradient(to bottom, rgba(0,0,0,0), ${baseBg});`}
        ></div>

        <div class="absolute left-1/2 -translate-x-1/2 -bottom-10 z-20">
          <div class="size-36 rounded-full border-2 border-white overflow-hidden">
            <img src={avatar} alt="Foto de perfil" class="w-full h-full object-cover" />
          </div>
        </div>
      </div>

      <div class="relative w-full px-6 pt-14 pb-10 sm:w-[980px] sm:mx-auto text-center">
        <h1 class="font-bebas text-3xl sm:text-5xl tracking-wide text-white">
          ALEJANDRO J. H. POLO
        </h1>

        <nav class="flex flex-wrap items-center justify-center gap-x-2 sm:gap-x-4 gap-y-2 text-white/85 text-base sm:text-lg">
          <a class="hover:text-white transition" href="https://www.serializd.com/user/YourFriendlyADC/profile" target="_blank">Serializd</a>
          <span class="text-white/35">|</span>
          <a class="hover:text-white transition" href="https://boxd.it/8fVlX" target="_blank">Letterboxd</a>
          <span class="text-white/35">|</span>
          <a class="hover:text-white transition" href="https://www.instagram.com/adcpolo?igsh=OHF5c3A3azFrbGN1&utm_source=qr" target="_blank">Instagram</a>
          <span class="text-white/35">|</span>
          <a class="hover:text-white transition" href="https://vs.co/t0jus7wp" target="_blank">VSCO</a>
        </nav>

        <p class="font-tangerine text-lg sm:text-2xl text-white/70 leading-relaxed mt-2">
          "Donde reside todo lo que siento y no sé cómo decir. Donde espero nunca llegues tú."
        </p>
      </div>
    </section>

    <!-- CONTENIDO -->
    <section class="w-full px-6 sm:px-0 pb-16">
      <div class="mx-auto flex flex-col gap-14 sm:max-w-[1100px]">
        <Categories />

        <!-- Recientes + Años -->
        <div class="grid grid-cols-1 lg:grid-cols-[1fr_300px] gap-12 items-start">
          <Recent />
          <Anios />
        </div>

        <Destacados />
      </div>
    </section>
    <Footer theme="home" />
  </main>
</Layout>
